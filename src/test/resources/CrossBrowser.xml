<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite  name="Team three PFLB Test" thread-count="2" parallel="tests">
    <listeners>
        <!-- AnnotationTransformer - автоматически добавляет RetryAnalyzer
          ко всем тестам для повторного запуска упавших тестов -->
        <listener class-name="listeners.AnnotationTransformer"/>
        <!-- TestListener - логирует начало/конец тестов и измеряет время выполнения -->
        <listener class-name="listeners.TestListener"/>
    </listeners>
    <test name="Chrome">
        <classes>
            <class name="tests.LoginTest"/>
            <class name="tests.CreateUserTest"/>
            <class name="tests.UsersReadAllTest"/>
<!--            <class name="tests.ReadUserWithCarsTest"/>-->
<!--            <class name="tests.AddMoneyTest"/>-->
<!--            <class name="tests.CarTest"/>-->
            <parameter name="browser" value="chrome"></parameter>
        </classes>
    </test> <!-- Test -->
    <test name="Firefox">
        <classes>
<!--            <class name="tests.LoginTest"/>-->
<!--            <class name="tests.CreateUserTest"/>-->
<!--            <class name="tests.UsersReadAllTest"/>-->
            <class name="tests.ReadUserWithCarsTest"/>
            <class name="tests.AddMoneyTest"/>
            <class name="tests.CarTest"/>
            <parameter name="browser" value="firefox"></parameter>
        </classes>
    </test> <!-- Test -->
</suite>